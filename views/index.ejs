<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background-color: lightblue;
    }
  </style>
  <title>User List App</title>
</head>

<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">User List App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/addUser">Add new user</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container d-flex flex-column align-items-center">
    <br>
    <div class="text-center">
      <h2>User App Database</h2>
    </div>
    <br>
    <table class="table table-hover small text-center">
      <thead>
        <tr>
          <th width="150">User Name</th>
          <th width="100">User Image</th>
          <th width="150">Dob</th>
          <th width="100">Height (m)</th>
          <th width="100">Weight (kg)</th>
          <th width="100">Blood Pressure (mmHg)</th>
          <th width="100">BMI</th>
          <th width="50">Edit</th>
          <th width="50">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < users.length; i++) { %>
          <tr>
            <td><a href="/user/<%= users[i].recordID %>"><%= users[i].user %></a></td>
            <td><img src="<%= users[i].image %>" width="20%"></td>
            <td><%= new Date(users[i].dob).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></td>
            <td><%= users[i].height %></td>
            <td><%= users[i].weight %></td>
            <td><%= users[i].bloodpressure %></td>
            <td><%= (users[i].weight / (users[i].height * users[i].height)).toFixed(2) %></td> 
            <td><a href="/editUser/<%= users[i].recordID %>" class="btn btn-primary" style="background-color: rgb(45, 45, 133); border-color: lightblue;">Edit</a></td>
            <td><a href="/deleteUser/<%= users[i].recordID %>" class="btn btn-danger" style="background-color: red; border-color: red;" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <br>
    <div class="text-center">
      <h3>BMI Chart</h3>
      <img src="/images/bmi-chart.png.webp" alt="BMI Chart" class="img-fluid" style="max-width: 50%; height: auto;">
    </div>
  </div>
</body>

</html>
